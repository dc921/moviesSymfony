{% extends "WPPlatformBundle::layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block bodyContent %}

    {{ include ("WPPlatformBundle:Movie:menu.html.twig") }}
</header>

<!--__--__--__--__--  T H E    S L I D E R --__--__--__--___--__--__--__-->
<div class="slider-wrapper theme-default">
    <div id="slider" class="nivoSlider">
        <img src="{{ asset ("images/slide1.jpg") }}" alt="" />
        <a href="http://geeksband.com"><img src="{{ asset ("images/slide2.jpg") }}" alt="" title="This is an example of a caption with a link" /></a>
        <img src="{{ asset ("images/slide3.jpg") }}" alt="" title="This is an example of a caption" />
        <img src="{{ asset ("images/slide4.jpg") }}" alt="" />
    </div>
</div>

<!--__--__--__--__--  M A I N   C O N T E N T  --__--__--__--___--__--__-->
<section>
    <div id="line">
        <div class="dline"></div>
        <h1>Films recemment ajoutes</h1>
        <div class="dline"></div>
    </div>
    <div class="list">
        {% set i = 1 %}
        {% for movie in listNewMovies %}
            <article class="col-1-6{% if i%6 == 0 %} lastarticle{% endif %}">
                <a href="{{ path ("wp_platform_movie",{'id': movie.id}) }}"><img src="{{ asset(movie.image.webPath) }}" alt="{{ movie.image.alt }}" width="140" /></a>
            </article>
            {% set i = i+1 %}
        {% endfor %}
        <div class="clear"></div>
        {% if listNewMovies | length > 12 %}
            <p class="seeMore">
                <a href="{{ path ("wp_platform_recentMovies") }}" class="rm">Voir plus...</a>
            </p>
        {% endif %}
    </div>
</section>				
{% endblock %}

{% block js %}
    <script src="{{ asset('jquery.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset ("js/jquery.nivo.slider.pack.js") }}" type="text/javascript"></script>
    <script src="{{ asset('js/slider.js') }}"></script>
{% endblock %}